<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".Contact">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="25dp">
        <ImageView
            android:id="@+id/backBtn"
            android:layout_width="20dp"
            android:layout_height="18dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/back_icon"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Холбоо барих"
            android:textSize="16dp"
            android:textColor="@color/black"
            android:layout_marginLeft="100dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="315dp"
        >
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottie"
            android:layout_width="390dp"
            android:layout_height="match_parent"
            android:elevation="2dp"
            android:layout_marginBottom="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/app_name"
            app:lottie_autoPlay="true"
            app:lottie_rawRes="@raw/lock_action" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Markting"
            android:textSize="15dp"
            android:layout_marginLeft="20dp"
            android:textColor="@color/black"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/phoneNum"
            android:layout_marginLeft="55dp"
            android:textSize="14dp"
            android:padding="5dp"
            android:drawablePadding="25dp"
            android:drawableStart="@drawable/phone_icon"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="markting@teamIO.mn"
            android:layout_marginLeft="55dp"
            android:textSize="14dp"
            android:padding="5dp"
            android:drawablePadding="25dp"
            android:drawableStart="@drawable/at_icon"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="http://www.teamIO.mn"
            android:layout_marginLeft="55dp"
            android:textSize="14dp"
            android:padding="5dp"
            android:drawablePadding="25dp"
            android:drawableStart="@drawable/ic_baseline_wifi_tethering_24"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="http://www.teamIO.mn"
            android:layout_marginLeft="55dp"
            android:textSize="14dp"
            android:padding="5dp"
            android:drawablePadding="25dp"
            android:drawableStart="@drawable/ic_baseline_location_on_24"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Техник туслалцаа"
            android:textSize="15dp"
            android:layout_marginLeft="20dp"
            android:textColor="@color/black"

            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/phoneNum"
            android:layout_marginLeft="55dp"
            android:textSize="14dp"
            android:padding="5dp"
            android:drawablePadding="25dp"
            android:drawableStart="@drawable/phone_icon"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="markting@teamIO.mn"
            android:layout_marginLeft="55dp"
            android:textSize="14dp"
            android:padding="5dp"
            android:drawablePadding="25dp"
            android:drawableStart="@drawable/at_icon"
            />
    </LinearLayout>
</LinearLayout>